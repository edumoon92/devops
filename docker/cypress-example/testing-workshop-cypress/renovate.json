{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "prHourlyLimit": 2,
  "updateNotScheduled": false,
  "timezone": "America/New_York",
  "schedule": [
    "every weekend"
  ],
  "masterIssue": true,
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "cypress",
        "@cypress/code-coverage",
        "@cypress/browserify-preprocessor",
        "cypress-react-unit-test",
        "cypress-xpath",
        "start-server-and-test",
        "typescript"
      ],
      "enabled": false
    }
  ]
}
